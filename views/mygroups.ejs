<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>My Groups</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="container mt-4">
  <div class="d-flex justify-content-between mb-3">
    <h2>My Groups</h2>
    <div>
      <span class="me-2">Hello, <%= currentUser.nickname %></span>
      <a class="btn btn-sm btn-outline-danger" href="/logout">Logout</a>
    </div>
  </div>
  <ul>
    <% if (groups.length === 0) { %>
      <li>You have not joined any groups yet.</li>
    <% } %>
    <% groups.forEach(function(g) { %>
      <li>
        <a href="/groups/<%= g._id %>"><%= g.title %></a>
        (<a href="/groups/<%= g._id %>/leave">Leave</a>)
      </li>
    <% }) %>
  </ul>
  <a class="btn btn-secondary" href="/dashboard">Back</a>
  <footer class="bg-light text-center py-3 mt-5" style="border-top: 1px solid #dee2e6;">
  <p class="mb-0 small text-muted">&copy; 2026 EIE3117 23079398d Yuen Pak Hei</p>
  </footer>
</body>
</html>
